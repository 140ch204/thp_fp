<div class="card">
	<ul class="list-group list-group-flush">
		<li id="link-list" class="list-group-item text-justify">
			<% project.project_links.each do |link| %>

				<p id="link_<%= link.id %>"><%= link_to "#{link.url_name}", link.url_project, :target => "_blank" %>
					<% if @current_organization.is_creating_project_permitted(@user) %>
					, <%= link_to "Supprimer ce lien", project_link_path(id: link.id, organization_id: project.organization_id), method: :delete, remote: true %>
					<% end %>					
				</p>
			<% end %>
		</li>
	</ul>
</div>