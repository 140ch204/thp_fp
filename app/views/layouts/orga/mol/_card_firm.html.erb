<% if current_user.is_admin? == true %>
  <% @admin_collection.each do |element| %>
    <% if element.organization.is_company == true %>
      <section>
        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSSQzqoJpQUvSlCigtpC3OLrIos_qxr-2XEBNCJ4HmmEhBUxZnj&s" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h2 class="card-title">Mon entreprise</h2>
                <h3>
                  <p class="card-text">Nom : <%= link_to element.organization.name, organization_path(element.organization.id)%></p>
                </h3>
                <h3>
                  <p class="card-text">Ville : <%= element.organization.city.city_name %></p>
                </h3>
                <h3>
                  <p class="card-text">Categorie : <%= element.organization.category %></p>
                </h3>
                <h3>
                  <p class="card-text">Description : <%= element.organization.description %></p>
                </h3>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <h4 class="card-title">Mes projets suivis : <%= link_to "Trouver un projet", projects_path, class:"btn btn-outline-secondary float-right"%></h4>
          </div>
        </section>
        <section>
          <div class="card-group">
            <% element.organization.donations.each do |donation|%>
              <div class="col-md-4">
                <div class="card">
                  <img src="https://helpx.adobe.com/content/dam/help/en/stock/how-to/visual-reverse-image-search/jcr_content/main-pars/image/visual-reverse-image-search-v2_intro.jpg" class="card-img-top" alt="...">
                  <div class="card-body">
                    <h5 class="card-title"><%= link_to donation.project.name, project_path(donation.project.id) %></h5>
                    <p class="card-text"><%= donation.project.description %></p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
        <br>
      </section>
    <% end %>
  <% end %>
<% end %>
