<% if !current_user.nil? %>
  <% @admin_collection.each do |element| %>
    <% organization_administred = element.organization %>
    <% if organization_administred.is_association == true %>
      <section>
        <div class="card mb-3">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="<%= organization_administred.logo_url %>" class="card-img-top1" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h2 class="card-title">MON ASSOCIATION</h2>
                <h3>
                  <p class="card-text">NOM - <%= link_to organization_administred.name, organization_path(organization_administred.id)%></p>
                </h3>
                <h3>
                  <p class="card-text">VILLE - <%= organization_administred.city.city_name %></p>
                </h3>
                <h3>
                  <p class="card-text">CATEGORIE - <%= organization_administred.category %></p>
                </h3>
                <h3>
                  <p class="card-text">DESCRIPTION - <%= organization_administred.description %></p>
                </h3>
              </div>
            </div>
          </div>
          <div class="card-footer">
            <h4 class="card-title">Les projets actuels : <%= link_to "Initier un projet", new_project_path(:organization_id => element.organization.id), class:"btn btn-outline-secondary float-right"%></h4>
          </div>
        </div>
      </section>
      <section>
        <div class="card-group">
          <% projects_administred = element.organization.projects%>      
          <% projects_administred.each do |project|%>
            <div class="col-md-4">
              <div class="card">
                <img src="<%= project.logo_url%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= link_to project.name, project_path(project.id) %></h5>
                </div>
              </div>
              <br>
            </div>
          <% end %>
        </div>
        <br>
      </section>
    <% end %>
  <% end %>
<% end %>


