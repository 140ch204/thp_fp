
<section class="fdb-block" style="background-image: url(https://zupimages.net/up/19/49/bwvc.png);">
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-7 col-xl-5 text-center">
        <div class="fdb-box">
            <div class="row">
            <div class="col">
                <h1>Modifier <br>votre<br> mot de passe</h1>
            </div>
            </div>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>
            <div class="row mt-4">
            <div class="col">
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control mb-1", placeholder: "Nouveau mot de passe" %>
            </div>
            </div>
            <div class="row mt-4">
            <div class="col">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-1", placeholder: "Confirmer nouveau mot de passe" %>
                <%= render "devise/shared/links" %>
            </div>
            </div>
            <div class="row mt-4">
            <div class="col">
              <div class="actions">
                <%= f.submit "Modifier", class:"btn btn-secondary" %>
              </div>
            </div>
            </div>
            <% end %>
        </div>
        </div>
    </div>
    </div>
</section>
