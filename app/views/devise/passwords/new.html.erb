<section class="fdb-block" style="background-image: url(https://zupimages.net/up/19/49/bwvc.png)">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-7 col-xl-5 text-center">
        <div class="fdb-box">
          <div class="row">
            <div class="col">
              <h1>Mot de passe oublié ?</h1>
            </div>
          </div>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="row mt-4">
            <div class="col">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder:"Email", type:"text" %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col">
              <div class="actions">
                <%= f.submit "Réinitialiser le mot de passe", class:"btn btn-secondary" %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
