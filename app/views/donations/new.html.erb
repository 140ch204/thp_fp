

<section class="fdb-block" style="background-image: url(https://i0.wp.com/founder360mag.com/wp-content/uploads/2019/02/Stripe.png?w=2048&ssl=1);">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-7 col-xl-5 text-center">
        <div class="fdb-box2">
          <div class="row">
            <div class="col">
              <h1>Don</h1>
            </div>
          </div>
          <%= form_with model: @donation do |donation_form|%>
            <div class="row mt-4">
              <div class="col">
                <%= donation_form.number_field :donation_amount, in: 1.0..Float::INFINITY, class: "form-control", placeholder: "Montant" %><br />
                <%= donation_form.hidden_field :project_id, :value => params[:project_id] %>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col">
                <div class="actions">
                  <%= donation_form.submit :value => "Faire un don", class:"btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

